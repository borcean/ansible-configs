---
# base
# ansible setup
branch: dev

timers:
   refresh:
      timer_boot: 1s
      timer_active: 1h
   pull:
      timer_boot: 10s
      timer_active: 10m

# users
user_ana: true
user_josh: true
user_nelu: true

# system setup
fail2ban: true

# workstation
# optional packages
toolbox_install: true
virt_manager_install: true
steam_install: native

# users
# jeffrey
profile_sync_daemon: true


zfs_pool: {
   pool_name: 'data',
   disk1: '/dev/vdb',
   disk2: '/dev/vdc',
}

zfs_filesystems:
   - {fs_name: 'backup'}
   - {fs_name: 'docker'}
   - {fs_name: 'media'}
   - {fs_name: 'personal'}

docker: {
  data_dir: '/{{zfs.poolName}}/docker/data',
  # data for docker env
  PUID: '1000',
  PGID: '1000'
}

dreamhost_ddns: {
   enabled: 'true',
   timer_boot: '180',
   timer_active: '3600'
}