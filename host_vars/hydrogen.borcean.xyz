---
# base
# ansible setup
branch: microos

tailscale_exit_node: true

timers:
   refresh:
      timer_boot: 1s
      timer_active: 1h
   pull:
      timer_boot: 10s
      timer_active: 10m

# users
user_ana: true
user_josh: true
user_nelu: true

# system setup
reboot_schedule: Sat 22:00

# server
test_system: true

zfs_pool: {
   pool_name: 'data',
   disk1: '/var/disk0.raw',
   disk2: '/var/disk1.raw',
}

zfs_filesystems:
   - {fs_name: 'backup'}
   - {fs_name: 'docker'}
   - {fs_name: 'media'}
   - {fs_name: 'personal'}

docker_setting: {
  data_dir: '/{{zfs_pool.pool_name}}/docker/data',
  # data for docker env
  PUID: '1000',
  PGID: '1000'
}

dreamhost_ddns: {
   enabled: 'true',
   timer_boot: '180',
   timer_active: '3600'
}